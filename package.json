{
  "name": "@franalgaba/agent-sdk-interactive",
  "version": "0.1.0",
  "description": "TypeScript SDK for building custom CLIs powered by Claude with custom agents, commands, and TUI",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun run build:js && bun run build:types",
    "build:js": "bun build src/index.ts --outdir dist --target node",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "example:basic": "bun run examples/basic.ts",
    "example:tui": "bun run examples/tui-mode.ts"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.76",
    "@mariozechner/pi-tui": "^0.34.2",
    "chalk": "^5.5.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "keywords": [
    "claude",
    "claude-code",
    "agent-sdk",
    "anthropic",
    "ai",
    "tui",
    "cli",
    "terminal",
    "agent",
    "llm"
  ],
  "author": "Anthropic",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/franalgaba/agent-sdk-interactive.git"
  },
  "bugs": {
    "url": "https://github.com/franalgaba/agent-sdk-interactive/issues"
  },
  "homepage": "https://github.com/franalgaba/agent-sdk-interactive#readme"
}
